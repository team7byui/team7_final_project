{
    "env": {
        "commonjs": true,
        "es2021": true,
        "jest": true,
        "mongo": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "indent": ["error", 2],
        "quotes": ["error", "double"],
        "semi": ["error", "always"],
        "no-trailing-spaces": "error",
        "max-len": ["error", 100]
    }
}
